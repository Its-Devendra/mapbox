generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id String  @id @default(cuid())
  name String
  slug String @unique
  clientBuildingIcon String? @db.Text // Custom SVG icon for client building marker
  clientBuildingIconWidth Int? @default(40) // Width of client building icon in pixels
  clientBuildingIconHeight Int? @default(40) // Height of client building icon in pixels

  clientBuildingUrl String? // URL to open when client building is clicked
  logo String? @db.Text // Project logo (Base64 or URL)
  logoWidth Int? @default(120) // Width of the logo in pixels
  logoHeight Int? @default(40) // Height of the logo in pixels
  secondaryLogo String? @db.Text // Secondary logo (Base64 or URL)
  secondaryLogoWidth Int? @default(120) // Width of secondary logo in pixels
  secondaryLogoHeight Int? @default(40) // Height of secondary logo in pixels
  clientBuildingLat Float? // Latitude of client building location
  clientBuildingLng Float? // Longitude of client building location
  clientBuildingName String? // Display name for client building
  clientBuildingDescription String? @db.Text // Description text for client building
  introAudio String? @db.Text // URL for the intro audio file (S3)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive Boolean @default(true)

  //relations
  themes Theme[]
  landmarks Landmark[]
  nearByPlaces NearBy[]
  categories Category[]
  settings MapSetting[]

  // Indexes for faster queries
  @@index([isActive])
  @@index([createdAt])
  @@index([slug])
}

model Theme {
  id String  @id @default(cuid())
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  primary String
  secondary String
  tertiary String @default("#ffffff")
  quaternary String @default("#f1f5f9")
  filterPrimary String?
  filterSecondary String?
  filterTertiary String?
  filterQuaternary String?
  mapboxStyle String
  customStyleUrl String?
  isActive Boolean @default(false)
  
  // Filter Section Glass Controls
  filterGlassEnabled Boolean @default(true)
  filterGlassBlur Int @default(50)
  filterGlassSaturation Int @default(200)
  filterGlassOpacity Int @default(25)
  filterBorderOpacity Int @default(35)
  filterPrimaryOpacity Int @default(100)
  filterSecondaryOpacity Int @default(100)
  filterTertiaryOpacity Int @default(100)
  
  // Landmark Card Glass Controls
  landmarkGlassEnabled Boolean @default(true)
  landmarkGlassBlur Int @default(50)
  landmarkGlassSaturation Int @default(200)
  landmarkGlassOpacity Int @default(25)
  landmarkBorderOpacity Int @default(35)
  primaryOpacity Int @default(100)
  secondaryOpacity Int @default(100)
  tertiaryOpacity Int @default(100)

  // Nearby Tooltip Glass Controls
  nearbyGlassEnabled Boolean @default(true)
  nearbyGlassBlur Int @default(50)
  nearbyGlassSaturation Int @default(200)
  nearbyGlassOpacity Int @default(25)
  nearbyBorderOpacity Int @default(35)
  nearbyPrimaryOpacity Int @default(100)
  nearbySecondaryOpacity Int @default(100)
  nearbyTertiaryOpacity Int @default(100)
  nearbyPrimary String? // Custom Background Color for Tooltip
  nearbySecondary String? // Custom Text Color for Tooltip
  nearbyTertiary String? // Custom Accent/Border Color for Tooltip
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for faster queries
  @@index([projectId])
  @@index([isActive])
  @@index([projectId, isActive])
}

model Landmark {
  id String @id @default(cuid())
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title String
  description String
  latitude Float
  longitude Float
  categoryId String
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  icon String? @db.Text // Custom SVG icon for this landmark
  image String? @db.Text // Image for this landmark
  iconWidth Int? @default(32) // Width of the icon in pixels
  iconHeight Int? @default(32) // Height of the icon in pixels
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for faster queries
  @@index([projectId])
  @@index([categoryId])
  @@index([projectId, categoryId])
}

model MapSetting {
  id                      String  @id @default(cuid())
  projectId               String
  project                 Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  defaultCenterLat        Float   @default(28.49)
  defaultCenterLng        Float   @default(77.08)
  defaultZoom             Float   @default(12)
  minZoom                 Float   @default(8)
  maxZoom                 Float   @default(18)
  enableRotation          Boolean @default(true)
  enablePitch             Boolean @default(true)
  enable3DBuildings       Boolean @default(true)
  buildings3DMinZoom      Int     @default(15)
  routeLineColor          String  @default("#3b82f6")
  routeLineWidth          Int     @default(4)
  initialAnimationDuration Float  @default(3.0)
  routeAnimationDuration   Float  @default(1.0)
  
  // Camera control - toggle between intro transition and default camera
  useDefaultCameraAfterLoad Boolean @default(false)  // false = intro transition (default), true = use default camera
  defaultPitch             Float  @default(70)      // Camera tilt angle (0-85 degrees)
  defaultBearing           Float  @default(-20)     // Camera rotation (-180 to 180 degrees)
  
  // Initial transition control
  useMinZoomForInitialTransition Boolean @default(false) // false = globe view, true = start from minZoom
  
  // Map bounds - restrict navigation area (DEPRECATED - use maxPanDistanceKm instead)
  southWestLat            Float?
  southWestLng            Float?
  northEastLat            Float?
  northEastLng            Float?
  
  // Distance-based bounds - max distance user can pan from center (client building)
  maxPanDistanceKm        Float?  // Maximum pan distance in kilometers (null = no limit)
  panCenterLat            Float?  // Custom center latitude for pan restriction (null = use client building)
  panCenterLng            Float?  // Custom center longitude for pan restriction (null = use client building)
  
  // Auto-fit bounds - automatically zoom to show all landmarks (responsive for all screen sizes)
  autoFitBounds           Boolean @default(false)  // If true, auto-calculate zoom to fit all landmarks
  autoFitPadding          Int     @default(50)     // Padding in pixels around the fitted bounds
  
  isActive                Boolean @default(false)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Indexes for faster queries
  @@index([projectId])
  @@index([isActive])
  @@index([projectId, isActive])
}

model Category {
  id String @id @default(cuid())
  name String
  icon String? @db.Text 
  isActive Boolean @default(true)
  defaultIconWidth Int? @default(32)
  defaultIconHeight Int? @default(32)
  useCategoryDefaults Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  landmarks Landmark[]
  nearByPlaces NearBy[]

  // Indexes for faster queries
  @@index([projectId])
  @@index([isActive])
  @@index([projectId, isActive])
}

model NearBy {
  id String @id @default(cuid())
  projectId String
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title String
  latitude Float
  longitude Float
  categoryId String
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  icon String? @db.Text // Custom SVG icon for this nearby place
  iconWidth Int? @default(32) // Width of the icon in pixels
  iconHeight Int? @default(32) // Height of the icon in pixels
  color String? // Custom color for the tooltip
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for faster queries
  @@index([projectId])
  @@index([categoryId])
  @@index([projectId, categoryId])
}